<%= form_for (@department_user) , :url => { :action => @action } do |f| %>
<% if @department_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@department_user.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @department_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table border="0px" cellspacing="0px" cellpadding="0px">
  <tr>
      <td align="center" bgcolor="#F7F7F7" width="20%"><strong>Department Name</strong></td>
      <% if @view_department_status == true %>
        <td width="80%"><%= select_tag "department_id", options_from_collection_for_select(@departments, 'id', 'department_name') %></td>
      <% else %>
        <td width="80%"><%= @department_name %></td>
      <% end %>
  </tr>
  <tr>
      <td align="center" bgcolor="#F7F7F7" ><strong><%= f.label :email %></strong></td>
      <% if @view_email_status == true %>
        <td><%= f.email_field :email, autofocus: true ,size: 100 %></td>
      <% else %>
        <td><%= @department_user.email %></td>
      <% end %>
  </tr>
  <tr>
      <td align="center" bgcolor="#F7F7F7">
        <strong><%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </strong></td>
      <td ><%= f.password_field :password, autocomplete: "off",size: 100 %></td>
  </tr>
  <tr>
      <td align="center" bgcolor="#F7F7F7"><strong><%= f.label :password_confirmation %></strong></td>
      <td ><%= f.password_field :password_confirmation, autocomplete: "off",size: 100 %></td>
  </tr>

</table>
  <div class="actions">
    <% if @submit_value == "Update Password" %>
      <%= f.submit "Update Password" %>
    <% else %>
      <%= f.submit  %>
    <% end %>
  </div>
<% end %>