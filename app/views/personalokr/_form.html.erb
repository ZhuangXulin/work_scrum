<%= form_for (@personal_okr) , :url => { :action => @action } do |f| %>
  <% if @personal_okr.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@personal_okr.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @personal_okr.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table border="0px" cellspacing="0" cellpadding="0">
  <tr>
      <td align="center" bgcolor="#F7F7F7" width="20%"><strong><%= f.label :OKR所属用户 %></strong></td>
      <td width="80%"><%= select_tag "user_id", options_from_collection_for_select(@department_users, 'id', 'email') %></td>
  </tr>
  <tr>
      <td align="center" bgcolor="#F7F7F7"><strong><%= f.label :OKR日期 %></strong></td>
      <td ><%= f.select :okr_date, options_from_collection_for_select(@date_list, 'okr_date', 'okr_date') %></td>
  </tr>
	<tr>
    	<td align="center" bgcolor="#F7F7F7"><strong><%= f.label :OKR内容 %></strong></td>
    	<td><%= f.text_area :okr_name,cols: 98 ,rows: 10  %></td>
	</tr>
  <% if @current_user_role == "manager" %>
    <tr>
      <td align="center" bgcolor="#F7F7F7"><strong><%= f.label :OKR占比 %></strong></td>
      <td><%= f.select :okr_proportion, options_for_select([["10%","0.1"],["20%","0.2"],["30%","0.3"],["40%","0.4"],["50%","0.5"],["60%","0.6"],["70%","0.7"],["80%","0.8"],["90%","0.9"],["100%","1"]]) %></td>
    </tr>
    <tr>
      <td align="center" bgcolor="#F7F7F7"><strong><%= f.label :OKR完成状态 %></strong></td>
      <td><%= f.select :okr_stats, options_from_collection_for_select(@okr_stats, 'id', 'stats_name') %></td>
    </tr>
    <tr>
      <td align="center" bgcolor="#F7F7F7"><strong><%= f.label :OKR难度系数 %></strong></td>
      <td><%= f.select :okr_degree_of_difficulty, options_from_collection_for_select(@degrees, 'id', 'degree_name') %></td>
    </tr>
    <tr>
      <td align="center" bgcolor="#F7F7F7"><strong>得分(系统自动生成)</strong></td>
      <td><%= f.text_field :okr_score, size: 100,readonly: true %></td>
    </tr>
    <tr>
      <td align="center" bgcolor="#F7F7F7"><strong><%= f.label :备注 %></strong></td>
      <td><%= f.text_area :description,cols: 98 ,rows: 10 %></td>
    </tr>
  <% end %>


</table>
<br>
  <div class="actions">
    <%= f.submit %>

  </div>
<% end %>
