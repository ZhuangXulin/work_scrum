<!DOCTYPE html>
<html>
<head>
  <title>Work Scrum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link media="all" rel="stylesheet" type="text/css" href="/css/all.css" />
  	<script type="text/javascript">window.jQuery || document.write('<script type="text/javascript" src="/js/jquery-1.7.2.min.js"><\/script>');</script>
  	<script type="text/javascript" src="/js/jquery.main.js"></script>
</head>
<body>
<div id="header" class="clearfix">
      <img src="images/logo.png" alt="logo" class="y-logo">
      <div class="profile-box">
		<span class="profile">
			<% if @locale.nil? || @locale == "en" %>
				<a href="welcome?locale=zh-CN" class="section">
			<% else %>
				<a href="welcome?locale=en" class="section">
			<% end %>
				<img class="image" src="/images/img1.png" alt="image description" width="26" height="26" />
				<span class="text-box">
					<% if @locale.nil? || @locale == "en" %>
						<strong class="name">Welcome,设置中文语言</strong>
					<% else %>
						<strong class="name">Welcome,Change To English</strong>
					<% end %>
					<strong><%= current_user.email %></strong>
				</span>
			</a>
			<a href="/department/edit/update" class="opener">opener</a>
		</span>
		 <%= link_to('Logout', destroy_user_session_path, :method => :delete,class: 'btn-on') %>     
	</div>
  </div>

<!--left-->
<div id="left">
  <ul class="left-nav">
    <li>
      <a href="/departmentokr" class="current"><em class="y-departmentdept"></em><%= t("menu.department_okr") %></a>
    </li>
    <li>
      <a href="/personalokr"><em class="y-personal"></em><%= t("menu.personal_okr") %></a>
    </li>
    <li>
      <a href="/department"><em class="y-personal"></em><%= t("menu.department") %></a>
    </li>
    <li>
      <a href="/topemployee"><em class="y-personal"></em><%= t("menu.top_employee") %></a>
    </li>
    <li>
      <a href="/" class="ico1"><em class="y-help"></em><%= t("menu.help") %></a>
    </li>
  </ul>
</div>
<!--subnav-->

<div id="container">
  <img src="images/y-pic04.png" alt="" class="y-img-book">
      <%= yield %>
</div>
	
</body>
</html>