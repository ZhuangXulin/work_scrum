<!DOCTYPE html>
<html>
<head>
  <title>Work Scrum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link media="all" rel="stylesheet" type="text/css" href="/css/all.css" />
  	<script type="text/javascript">window.jQuery || document.write('<script type="text/javascript" src="/js/jquery-1.7.2.min.js"><\/script>');</script>
  	<script type="text/javascript" src="/js/jquery.main.js"></script>
</head>
<body>
	<div id="wrapper">
		<div id="content">
			<div class="c1">
				<div class="controls">
					<nav class="links">
						<ul>
							<li><a href="/departmentokr" class="ico3"><%= t("menu.department_okr") %></a></li>
						</ul>
						<ul>
							<li><a href="/personalokr" class="ico3"><%= t("menu.personal_okr") %></a></li>
						</ul>
						<ul>
							<li><a href="/department" class="ico3"><%= t("menu.department") %></a></li>
						</ul>
						<ul>
							<li><a href="/topemployee" class="ico3"><%= t("menu.top_employee") %></a></li>
						</ul>
						<ul>
							<li><a href="/" class="ico1"><%= t("menu.help") %></a></li>
						</ul>
					</nav>
					<div class="profile-box">
						<span class="profile">
							<% if @locale.nil? || @locale == "en" %>
								<a href="welcome?locale=zh-CN" class="section">
							<% else %>
								<a href="welcome?locale=en" class="section">
							<% end %>
								<img class="image" src="/images/img1.png" alt="image description" width="26" height="26" />
								<span class="text-box">
									<% if @locale.nil? || @locale == "en" %>
										<strong class="name">Welcome,设置中文语言</strong>
									<% else %>
										<strong class="name">Welcome,Change To English</strong>
									<% end %>
									<strong><%= current_user.email %></strong>
								</span>
							</a>
							<a href="/department/edit/update" class="opener">opener</a>
						</span>
						 <%= link_to('Logout', destroy_user_session_path, :method => :delete,class: 'btn-on') %>     
					</div>
				</div>
				
<%= yield %>

			</div>
		</div>
		
	</div>
</body>
</html>